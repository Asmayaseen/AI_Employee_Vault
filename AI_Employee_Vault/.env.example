# AI Employee Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===== User Configuration =====
USER_EMAIL=your-email@example.com
USER_NAME=Your Name

# ===== Development Mode =====
DRY_RUN=true
DEV_MODE=true
DEBUG=false

# ===== Gmail API =====
# Get credentials from: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_CREDENTIALS_PATH=/mnt/d/Ai-Employee/AI_Employee_Vault/Watchers/credentials.json

# ===== WhatsApp =====
WHATSAPP_SESSION_PATH=/mnt/d/Ai-Employee/AI_Employee_Vault/Watchers/.whatsapp_session
WHATSAPP_PHONE=your_phone_number

# ===== LinkedIn =====
LINKEDIN_SESSION_PATH=/mnt/d/Ai-Employee/AI_Employee_Vault/Watchers/.linkedin_session
LINKEDIN_CHECK_INTERVAL=300

# ===== Banking (if applicable) =====
BANK_API_TOKEN=your_bank_token_here

# ===== Paths =====
VAULT_PATH=/mnt/d/Ai-Employee/AI_Employee_Vault
LOG_PATH=/mnt/d/Ai-Employee/AI_Employee_Vault/Logs

# ===== Dashboard =====
DASHBOARD_PORT=9000

# ===== Odoo Integration =====
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_USER=admin
ODOO_PASSWORD=your_odoo_password_here

# ===== Social Media - Facebook/Instagram (Meta Graph API) =====
META_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_TOKEN=
INSTAGRAM_BUSINESS_ID=

# ===== Social Media - Twitter/X API v2 =====
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ===== Watcher Settings =====
GMAIL_CHECK_INTERVAL=120
WHATSAPP_CHECK_INTERVAL=30
FILE_CHECK_INTERVAL=10
SOCIAL_CHECK_INTERVAL=300

# ===== Rate Limits =====
MAX_EMAILS_PER_HOUR=10
MAX_MESSAGES_PER_HOUR=20
MAX_PAYMENTS_PER_DAY=3

# ===== Operational =====
LOG_RETENTION_DAYS=30
APPROVAL_TIMEOUT_HOURS=48

# ===== Platinum Tier - Agent Mode =====
# Set to "draft_only" on cloud (blocks send/post/payment execution)
# Set to "full" on local (default, allows all operations)
AGENT_MODE=full
AGENT_NAME=local

# ===== Platinum Tier - Cloud API =====
CLOUD_API_URL=https://ai.example.com

# ===== Platinum Tier - Vault Sync =====
VAULT_SYNC_REMOTE=origin
VAULT_SYNC_BRANCH=main

# ===== Platinum Tier - Alerts =====
ALERTS_ENABLED=false
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=
ALERT_SMTP_PASS=
ALERT_FROM_EMAIL=
ALERT_TO_EMAIL=
