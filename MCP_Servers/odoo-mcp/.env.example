# Odoo MCP Server Configuration (Odoo 18+ / Postgres 17)
# Copy this file to .env and fill in your values

# Required - Docker Compose (Postgres)
POSTGRES_DB=odoo
POSTGRES_USER=odoo
POSTGRES_PASSWORD=your_postgres_password_here

# Required - Odoo Connection
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=your_password_here

# Optional - API Settings
ODOO_API_VERSION=2
ODOO_TIMEOUT=30

# Optional - Defaults
ODOO_COMPANY_ID=1
ODOO_CURRENCY=USD

# Optional - Business Rules
# Invoices above this amount require approval
ODOO_APPROVAL_THRESHOLD=500

# Optional - Logging
ODOO_LOG_LEVEL=INFO
ODOO_LOG_FILE=/mnt/d/Ai-Employee/AI_Employee_Vault/Logs/odoo_mcp.log
